@page "/"
@page "/customers"
@using SM.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager


<PageTitle>Customers</PageTitle>

<h1>Customers</h1>
<!-- Form to add a new customer -->
<div class="mb-3">
    <button @onclick="GoToCreate">Add New Customer</button>
</div>
@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                var isSelected = selectedCustomerId == customer.Id;
                <tr class="@GetRowClass(isSelected)" @onclick="@(() => OnRowClick(customer))"
                    @onkeydown="@(e => OnRowKeyDown(e, customer))" tabindex="0" aria-selected="@isSelected">
                    <td>@customer.Name</td>
                    <td>@customer.Code</td>
                    <td>@customer.PrimaryEmail</td>
                    <td>@customer.PrimaryPhone</td>
                    <td>
                        <button @onclick="() => GoToEdit(customer.Id)">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CustomerDto> customers = new();
    private Guid? selectedCustomerId;
    protected override async Task OnInitializedAsync()
    {
        customers = await Http.GetFromJsonAsync<List<CustomerDto>>("http://localhost:5124/customers") ?? [];
    }

    void GoToCreate() => NavigationManager.NavigateTo("/customers/create");
    void GoToEdit(Guid id) => NavigationManager.NavigateTo($"/customers/edit/{id}");

    void GoToListSubstations(Guid id) => NavigationManager.NavigateTo($"/substations/bycustid/{id}");


    private void OnRowClick(CustomerDto customer)
    {
        selectedCustomerId = customer.Id;
        GoToListSubstations(customer.Id);
    }

    private void OnRowKeyDown(KeyboardEventArgs e, CustomerDto customer)
    {
        // Support keyboard accessibility (Enter/Space to “click” the row)
        if (e.Key is "Enter" or " ")
        {
            OnRowClick(customer);
        }
    }

    private string GetRowClass(bool isSelected) => isSelected ? "table-active" : "";

}