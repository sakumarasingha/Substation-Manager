@page "/substations"
@using SM.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager


<PageTitle>Substations</PageTitle>

<h1>Substations</h1>
<!-- Form to add a new customer -->
<div class="mb-3">
    <button @onclick="GoToCreate">Add New Substations</button>
</div>
@if (substations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Customer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var substation in substations)
            {
                var isSelected = selectedSubstationId == substation.Id;
                <tr class="@GetRowClass(isSelected)" @onclick="@(() => OnRowClick(substation))"
                    @onkeydown="@(e => OnRowKeyDown(e, substation))" tabindex="0" aria-selected="@isSelected">
                    <td>@substation.Name</td>
                    <td>@substation.Code</td>
                    <td>@substation.Customer?.Name</td>
                    <td>
                        <button @onclick="() => GoToEdit(substation.Id)">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<SubstationDto> substations = new();
    private Guid? selectedSubstationId;
    protected override async Task OnInitializedAsync()
    {
        substations = await Http.GetFromJsonAsync<List<SubstationDto>>("http://localhost:5124/substations") ?? [];
    }

    void GoToCreate() => NavigationManager.NavigateTo("/substations/create");
    void GoToEdit(Guid id) => NavigationManager.NavigateTo($"/substations/edit/{id}");

    void GoToListEquipments(Guid id) => NavigationManager.NavigateTo($"/equipments/bysubid/{id}");
    private void OnRowClick(SubstationDto substation)
    {
        selectedSubstationId = substation.Id;
        GoToListEquipments(substation.Id);
    }

    private void OnRowKeyDown(KeyboardEventArgs e, SubstationDto substation)
    {
        // Support keyboard accessibility (Enter/Space to “click” the row)
        if (e.Key is "Enter" or " ")
        {
            OnRowClick(substation);
        }
    }

    private string GetRowClass(bool isSelected) => isSelected ? "table-active" : "";
}